     GAS_ALM_RBV,
     FIRE_DETECTOR_RBV,
     COAX_RBV,
     EXH_RBV,
     N2_RBV}
}

file hpm900bi.template {
    pattern {RECORD_NAME, DESC, BIT}
    {Z_PURGE_RBV, "plc input, Z purge bit", 0}
    {GAS_ON_RBV, "plc input, gas on bit", 1}
    {DIG_IN_1_RBV, "plc input, Dig In 1 bit", 2}
    {DIG_IN_2_RBV, "plc input, Dig In 2 bit", 3}
    {DIG_IN_3_RBV, "plc input, Dig In 3 bit", 4}
    {DIG_IN_4_RBV, "plc input, Dig In 4 bit", 5}
    {RSD_RBV, "plc input, RSD bit", 8}
    {EMO_STOP_RBV, "plc input, EMO Stop bit", 9}
    {GAS_WN_RBV, "plc input, Gas-WN bit", A}  
    {GAS_ALM_RBV, "plc input, Gas-ALM bit", B}  
    {FIRE_DETECTOR_RBV, "plc input, Fire Detector bit", C}  
    {COAX_RBV, "plc input, Coax bit", D}  
    {EXH_RBV, "plc input, EXH bit", E}  
    {N2_RBV, "plc input, N2 bit", F}  
}
